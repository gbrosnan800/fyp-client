<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00a651"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gbrosnan.fyp_client.DetectActivity" >
    
    <ImageView
        android:id="@+id/logo_detect"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/repmeterlogo" />

    <TextView
        android:id="@+id/detect_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_detect"
		android:layout_centerHorizontal="true"
		android:textSize="30sp"
		android:textColor="#095529"
        android:text="Detect-Demo" />
    
     <TextView
        android:id="@+id/lblDetect_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detect_header"
        android:layout_marginTop="40dp"
        android:textColor="#095529"
        android:text="Server" />
     
     <EditText
        android:id="@+id/txtDetect_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblDetect_server"
        android:layout_alignBottom="@+id/lblDetect_server"
        android:layout_marginStart="80dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:text="192.168.173.1:8080" /> 
        
    <Button
        android:id="@+id/btnDetect_start"
        android:text="Start" 
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/lblDetect_server"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        
		android:layout_width="80dp"
		android:layout_height="60dp"
		android:background="@drawable/buttonshape"
		android:shadowColor="#A8A8A8"
		android:shadowDx="0"
		android:shadowDy="0"
		android:shadowRadius="0"
	/>
    
    <Button
        android:id="@+id/btnDetect_stop"
        android:text="Stop" 
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/lblDetect_server"
        android:layout_marginTop="20dp"
        android:layout_marginStart="120dp"
        
		android:layout_width="80dp"
		android:layout_height="60dp"
		android:background="@drawable/buttonshape"
		android:shadowColor="#A8A8A8"
		android:shadowDx="0"
		android:shadowDy="0"
		android:shadowRadius="0"
	/>

    <Button
        android:id="@+id/btnDetect_send"
        android:text="Detect" 
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/lblDetect_server"
        android:layout_marginTop="20dp"
        android:layout_marginStart="220dp"
        
		android:layout_width="80dp"
		android:layout_height="60dp"
		android:background="@drawable/buttonshape"
		android:shadowColor="#A8A8A8"
		android:shadowDx="0"
		android:shadowDy="0"
		android:shadowRadius="0"
	/>
    
   <TextView
        android:id="@+id/lblDetect_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDetect_start"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        
		android:textColor="#A60002"
        android:text="Message Status" />
   
    <TextView
         android:id="@+id/lblDetect_exercise"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/lblDetect_status"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="40dp"
         android:text="Bicep Curl"
         android:textStyle="bold"
         android:textSize="40sp"
         android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/lblDetect_repnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblDetect_exercise"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:text="10"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="175sp" />
    


</RelativeLayout>
